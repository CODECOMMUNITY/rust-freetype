VPATH=%VPATH%

RUSTC ?= rustc
RUSTFLAGS ?=
EXT_DEPS ?=

ifeq ($(CFG_OSTYPE),linux-androideabi)
RUSTFLAGS += -L./../../android/libfreetype2/.libs
endif

RUST_SRC=$(shell find $(VPATH)/. -type f -name '*.rs')

.PHONY: all clean
all:	libfreetype-servo.dummy

libfreetype-servo.dummy: freetype.rc $(RUST_SRC) $(EXT_DEPS)
	$(RUSTC) $(RUSTFLAGS) $< --out-dir . -C extra-filename=-servo
	touch $@

freetype-test: freetype.rc $(RUST_SRC)
	$(RUSTC) $(RUSTFLAGS) $< -o $@ --test

check: freetype-test
	./freetype-test

clean:
	rm -f *.o *.a *.so *.dylib *.rlib *.dll *.dummy *-test

